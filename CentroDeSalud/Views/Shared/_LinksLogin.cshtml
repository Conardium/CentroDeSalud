@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User)) //Comprueba si el usuario está autenticado
	{
		<li class="nav-item">
			<span class="nav-link text-dark">Hola, @User.FindFirst("NombreReal")?.Value (@User.Claims.FirstOrDefault(c => 
				c.Type.Contains("role"))?.Value)</span>
		</li>
		<li class="nav-item">
			<form class="form-inline" asp-action="logout" asp-controller="usuarios">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link dark-text" asp-action="RegisterPaciente" asp-controller="usuarios">Registrarse</a>
		</li>
		<li class="nav-item">
			<a class="nav-link dark-text" asp-action="Login" asp-controller="usuarios">Login</a>
		</li>
	}
</ul>
