@using CentroDeSalud.Models.ViewModels
@model IEnumerable<SelectPacienteViewModel>

@{
    ViewData["Title"] = "Seleccionar Paciente";
}

<h2 class="text-center mb-3">Seleccionar paciente</h2>
<p class="text-center form-text">Seleccione el paciente al que desea crearle un informe.</p>

<div class="card mt-4 p-4 mx-auto" style="max-width: 500px;">
    <form asp-action="Crear" method="get">
        <div class="mb-3">
            <label class="form-label">Paciente</label>
            <select name="PacienteId" id="PacienteId" class="form-select">
                @foreach(var paciente in Model)
                {
                    <option value="@paciente.Id">@paciente.Nombre</option>
                }
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn boton-Verde-Oscuro px-4">
                Comenzar informe
            </button>
        </div>
    </form>
</div>
