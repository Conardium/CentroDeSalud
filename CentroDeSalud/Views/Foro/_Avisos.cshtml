@using CentroDeSalud.Data

@if (TempData["Mensaje"] != null)
{
    var tipoMensaje = TempData["Tipo"].ToString() == Constantes.Error ? "alert-danger" : "alert-success";

    <div class="d-flex justify-content-center">
        <div class="alert @tipoMensaje alert-dismissible fade show d-inline-flex align-items-center position-relative" role="alert" style="width: fit-content; max-width: 100%;">
            <i class="fa-solid fa-circle-info me-2"></i>
            <div>
                @TempData["Mensaje"]
            </div>
            <button type="button" class="btn-close position-absolute end-0" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    </div>
}
