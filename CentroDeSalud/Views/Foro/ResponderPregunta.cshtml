@using CentroDeSalud.Models.ViewModels
@model PublicarRespuestaViewModel

@{
    ViewData["Title"] = "Responder pregunta";
}

<h2 class="text-center mb-3">Responder pregunta</h2>

<partial name="_Avisos" />

<div class="m card VerdeMenta">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="fw-bold mb-0">@Model.PreguntaForo.Titulo</h5>
        </div>
        <p class="mb-3 card-text">@Model.PreguntaForo.Texto</p>

        <hr />
        
        <div class="mt-4">
            <form asp-action="PublicarRespuesta">
                <input asp-for="PreguntaForoId" type="hidden" />

                <div>
                    <label asp-for="Respuesta" class="form-label fw-bold"></label> <span class="text-danger">*</span>
                    <textarea class="form-control" asp-for="Respuesta" rows="3" placeholder="Escriba aqui su respuesta..."></textarea>
                    <span asp-validation-for="Respuesta" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="mt-3 btn boton-Verde-Oscuro">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
