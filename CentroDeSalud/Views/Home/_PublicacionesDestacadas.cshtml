@using CentroDeSalud.Models.ViewModels
@model PaginaInicioViewModel

<h1 class="pt-5 fw-bold text-decoration-underline TextoVerdeOscuro text-center mb-4">Publicaciones destacadas</h1>

@if (Model.Destacadas?.Any() == true)
{
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Destacadas.Count; i++)
            {
                <button type="button"
                        data-bs-target="#carouselExampleCaptions"
                        data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")"
                        aria-current="@(i == 0 ? "true" : "false")"
                        aria-label="Slide @(i + 1)">
                </button>
            }
        </div>

        <div class="carousel-inner rounded-4 shadow">
            @for (int i = 0; i < Model.Destacadas.Count; i++)
            {
                var pub = Model.Destacadas.ElementAt(i);
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@pub.ImagenURL"
                         class="d-block w-100"
                         style="max-height: 550px; object-fit: cover;"
                         alt="Imagen de @pub.Titulo" />
                    <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                        <h5>@pub.Titulo</h5>
                        <p>@pub.Resumen</p>
                        <a asp-action="Detalles" asp-controller="Publicaciones" asp-route-id="@pub.Slug" class="btn btn-outline-light mt-2">Leer más</a>
                    </div>
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: invert(1) drop-shadow(0 0 3px black);"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true" style="filter: invert(1) drop-shadow(0 0 3px black);"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
}
else
{
    <p class="text-center form-text fs-5">Actualmente no disponemos de publicaciones destacadas.</p>
}