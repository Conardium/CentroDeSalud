@using CentroDeSalud.Enumerations
@using CentroDeSalud.Models.ViewModels
@model CrearMedicoViewModel

<div class="mt-3 row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow bg-light">
            <div class="card-body">
                <h4>
                    Horario de consultas
                    <i data-bs-toggle="tooltip" title="Indique el horario de consultas que tendrá el médico"
                       class="fa-solid fa-circle-info fs-5 text-primary" style="cursor: help;"></i>
                </h4>
                <div class="row">
                    @*Tabla con los resultados*@
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-success">
                                    <tr>
                                        <th>Dia de la semana</th>
                                        <th>Hora Inicio</th>
                                        <th>Hora Fin</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="tabla-franjas-body" class="table-group-divider">
                                </tbody>
                            </table>
                        </div>
                    </div>

                    @*Boton para añadir una nueva entrada*@
                    <div class="col-md-12 d-flex justify-content-center align-items-center mb-3">
                        <button id="btnNuevaFranja" class="btn btn-outline-primary">Nueva franja</button>
                    </div>


                    @*Formulario para añadir una nueva franja horaria*@
                    <div id="formularioFranja" class="col-md-12 gap-3 justify-content-center mb-3">
                        <div class="col-md-3 form-group">
                            <label>Dia de la semana</label>
                            <select id="diaSemana" asp-items="Html.GetEnumSelectList<DiaSemana>()" class="form-control">
                            </select>
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Hora inicio</label>
                            <input id="horaInicio" class="form-control" type="time" />
                        </div>
                        <div class="col-md-3 form-group">
                            <label>Hora fin</label>
                            <input id="horaFin" class="form-control" type="time" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn boton-Verde-Oscuro" id="btnAnadir">
                                <i class="fa-regular fa-square-plus"></i> Añadir franja
                            </button>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="HorarioConsultas" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>