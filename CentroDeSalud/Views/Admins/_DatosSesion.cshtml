@using CentroDeSalud.Enumerations
@using CentroDeSalud.Models.ViewModels
@model CrearMedicoViewModel

<div class="mt-3 row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow bg-light">
            <div class="card-body">
                <h4>
                    Datos de inicio de sesión
                    <i data-bs-toggle="tooltip" title="Estos datos se usarán para iniciar sesión cuando se registre"
                       class="fa-solid fa-circle-info fs-5 text-primary" style="cursor: help;"></i>
                </h4>
                <div class="d-flex gap-4">
                    <div class="form-group w-50">
                        <label asp-for="Email"></label> <span class="text-danger">*</span>
                        <input asp-for="Email" class="form-control" placeholder="nombre@ejemplo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group w-50">
                        <label asp-for="PasswordHash"></label> <span class="text-danger">*</span>
                        <input asp-for="PasswordHash" class="form-control" type="password" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>