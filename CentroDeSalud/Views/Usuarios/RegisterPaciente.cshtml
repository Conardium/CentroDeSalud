@using CentroDeSalud.Enumerations
@using CentroDeSalud.Models.ViewModels
@model RegisterPacienteViewModel

@{
    ViewData["Title"] = "Nuevo usuario";
    ViewData["BodyClass"] = "fondoRegistrar";
}

<h2 class="mt-4 row justify-content-center">@ViewData["Title"]</h2>

<p class="row justify-content-center form-text">Los campos con * son obligarios</p>

<form asp-action="RegisterPaciente" method="post">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center gap-2">
                <i class="fa-solid fa-circle-exclamation"></i>
            </div>
            <div class="card shadow bg-light">
                <div class="card-body">
                    <h4>Datos personales</h4>
                    <div class="d-flex gap-4 mb-3">
                        <div class="form-group w-50">
                            <label asp-for="Nombre"></label> <span class="text-danger">*</span>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre"/>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group w-75">
                            <label asp-for="Apellidos"></label> <span class="text-danger">*</span>
                            <input asp-for="Apellidos" class="form-control" placeholder="Apellidos"/>
                            <span asp-validation-for="Apellidos" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-4 mb-3">
                        <div class="form-group w-50">
                            <label asp-for="Dni"></label> <span class="text-danger">*</span>
                            <input asp-for="Dni" class="form-control" placeholder="12345678A"/>
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>

                        <div class="form-group w-50">
                            <label asp-for="FechaNacimiento"></label> <span class="text-danger">*</span>
                            <input asp-for="FechaNacimiento" class="form-control" type="date" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>

                        <div class="form-group w-50">
                            <label asp-for="Telefono"></label>
                            <input asp-for="Telefono" class="form-control" placeholder="123456789" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Direccion"></label>
                        <input asp-for="Direccion" class="form-control" placeholder="Calle Ejemplo, Nº1"/>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-4 mb-3">
                        <div class="form-group w-50">
                            <label asp-for="Sexo"></label> <span class="text-danger">*</span>
                            <select asp-for="Sexo" asp-items="Html.GetEnumSelectList<Sexo>()" class="form-control">
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>

                        <div class="form-group w-50">
                            <label asp-for="GrupoSanguineo"></label> <span class="text-danger">*</span>
                            <select asp-for="GrupoSanguineo" asp-items="Html.GetEnumSelectList<GrupoSanguineo>()" class="form-control"></select>
                            <span asp-validation-for="GrupoSanguineo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow bg-light">
                <div class="card-body">
                    <h4>Datos de inicio de sesión <i title="Estos datos se usarán para iniciar sesión cuando se registre" class="fa-solid fa-circle-info fs-5 text-primary"></i></h4>
                    <div class="d-flex gap-4">
                        <div class="form-group w-50">
                            <label asp-for="Email"></label> <span class="text-danger">*</span>
                            <input asp-for="Email" class="form-control" placeholder="nombre@ejemplo.com"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group w-50">
                            <label asp-for="PasswordHash"></label> <span class="text-danger">*</span>
                            <input asp-for="PasswordHash" class="form-control" type="password" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="w-50    btn boton-Verde-Oscuro mt-3">Registrarse</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
