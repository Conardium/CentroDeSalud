@using CentroDeSalud.Models.ViewModels
@model OlvidarPasswordViewModel

@{
	ViewData["Title"] = "Recuperar Contraseña";
}

<h2 class="mt-4 row justify-content-center mb-3">Recuperar contraseña</h2>

@if (!string.IsNullOrWhiteSpace(ViewBag.Mensaje as string))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Mensaje
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="OlvidarPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="d-flex">
                <p class="text-muted text-center">Indique el correo electronico de su cuenta para que podamos enviarle 
                    un mensaje para recuperar su contraseña.
                </p>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label> <span class="text-danger">*</span>
                <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="mt-3 btn boton-Verde-Oscuro">Enviar correo</button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
