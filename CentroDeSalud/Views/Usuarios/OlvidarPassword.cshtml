@using CentroDeSalud.Models.ViewModels
@model OlvidarPasswordViewModel

@{
	ViewData["Title"] = "Recuperar Contraseña";
}

<h2>Recuperar contraseña</h2>

@if (!string.IsNullOrWhiteSpace(ViewBag.Mensaje as string))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Mensaje
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="OlvidarPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="mt-3 btn btn-primary">Enviar</button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
